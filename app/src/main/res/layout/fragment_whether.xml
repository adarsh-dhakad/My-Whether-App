<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/multicloud"
    tools:context=".WhetherFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/humidityview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="humidity"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="34dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/mycity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My City"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humidityview" />
    <TextView
        android:id="@+id/celsiusview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="t 45'C"
        android:textAlignment="center"
        android:textSize="55dp"
        android:textColor="#000000"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mycity" />
    <TextView
        android:id="@+id/fahrenheit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="89'F"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="55dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celsiusview" />
    <TextView
        android:id="@+id/day"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="sunday"
        android:textAlignment="center"
        android:textSize="19dp"
        android:padding="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fahrenheit" />

</androidx.constraintlayout.widget.ConstraintLayout>